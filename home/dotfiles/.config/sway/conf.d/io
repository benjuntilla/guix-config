# Input
input type:pointer {
    accel_profile "flat"
    pointer_accel -0.25
    dwt disabled
    natural_scroll disabled
    tap enabled
}

input type:touchpad {
    accel_profile "flat"
    pointer_accel -0.25
    dwt disabled
    natural_scroll enabled
    tap enabled
}

input type:keyboard {
    xkb_options caps:swapescape,altwin:swap_lalt_lwin
}

input type:tablet_tool {
    accel_profile "flat"
    pointer_accel 0
    map_to_output $primary
}
